<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
      <link href="{{constant('ECweb\\Bootstrap::ENTRY_URL')}}css/style.css" rel="stylesheet">
  </head>

  <body>
    <header>
      {% if session.family_name is empty %}
      {% include 'header_unlogin_top.html.twig' %}
      {% else %}
      {% include 'header_login_top.html.twig' %}
      {% endif %}
    </header>

<div class = "page_body">

    <form method="post" action = "{{constant('ECweb\\Bootstrap::ENTRY_URL_SHOP')}}cart.php?item_id={{itemData.item_id}}">

    <div id="item_detail">
        <img class="detail_image" src="{{constant('ECweb\\Bootstrap::ENTRY_URL_SHOP')}}images/{{itemData.image}}" alt="{{itemData.item_name}}">
      </div>

      <div class="detail">
        <dl>
          <dt>商品名</dt>
          <dd>{{itemData.item_name}}</dd>
          <dt>詳細</dt>
          <dd>{{itemData.detail}}</dd>
          <dt>価格</dt>
          <dd>&yen;{{itemData.price|number_format(0, '.', ',')}}</dd>
        </dl>
      </div>
    
      <div class="cart_in">
        <input type="button" name="back" value="一覧へ戻る" onclick="history.back(); return false;">

        <input type="submit" value="ショッピングカートへ入れる">
      </div>
    </div>
</div>
    <div>
      {% include 'footer.html.twig' %}
    </div>
  </body>
</html>